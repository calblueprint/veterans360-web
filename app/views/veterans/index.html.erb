<p id="notice"><%= notice %></p>

<h1>Veterans</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>On connect</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @veterans.each do |veteran| %>
      <tr>
        <td><%= veteran.first_name %></td>
        <td><%= veteran.last_name %></td>
        <td><%= veteran.email %></td>
        <td><%= veteran.on_connect %></td>
        <td><%= link_to 'Show', veteran %></td>
        <td><%= link_to 'Edit', edit_veteran_path(veteran) %></td>
        <td><%= link_to 'Destroy', veteran, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

